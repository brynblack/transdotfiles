{
    "name": "arRPC",
    "description": "Client extension for arRPC allowing RPC in Discord Web",

    "version": "1.0.0",

    "author": "OpenAsar Team",
    "homepage_url": "https://github.com/OpenAsar/arRPC",

    "content_scripts": [
        {
            "matches": ["*://*.discord.com/*"],
            "js": ["content.js"]
        }
    ],

    "permissions": [
        "*://*.discord.com/*"
    ],

    "manifest_version": 2,

    "browser_specific_settings": {
        "gecko": {
            "id": "arrpc_mv2@openasar.dev"
        }
    }
}